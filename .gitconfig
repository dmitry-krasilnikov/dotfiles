[core]
	pager = bat
	autocrlf = input
[merge]
        conflictStyle = diff3
	tool = nvim
[mergetool "nvim"]
        cmd = nvim -f -c \"Gdiff\" \"$MERGED\"

[alias]
        mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -

[includeIf "gitdir:~/Development/j2/"]
    path = ~/Development/j2/.gitconfig_include
[pull]
	rebase = false
